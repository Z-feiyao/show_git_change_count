{
  "name": "show-git-change-count",
  "displayName": "Show Git Change Count",
  "description": "在源代码管理图标上显示 git 变更的文件数量",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "show-git-change-count.refresh",
        "title": "刷新 Git 变更数量"
      }
    ],
    "configuration": {
      "title": "Show Git Change Count",
      "properties": {
        "showGitChangeCount.enabled": {
          "type": "boolean",
          "default": true,
          "description": "是否启用 Git 变更数量显示"
        },
        "showGitChangeCount.showDetails": {
          "type": "boolean",
          "default": true,
          "description": "是否显示详细的变更类型（修改、新增、删除等）"
        },
        "showGitChangeCount.updateInterval": {
          "type": "number",
          "default": 2000,
          "minimum": 1000,
          "maximum": 10000,
          "description": "文件变化防抖延迟（毫秒）- 文件变化后等待多长时间再更新状态"
        },
        "showGitChangeCount.position": {
          "type": "string",
          "enum": [
            "left",
            "right"
          ],
          "default": "left",
          "description": "状态栏显示位置"
        },
        "showGitChangeCount.showWhenZero": {
          "type": "boolean",
          "default": true,
          "description": "当没有变更时是否显示状态栏"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/test-electron": "^2.5.2",
    "typescript": "^4.9.4"
  },
  "publisher": "stevezhang",
  "repository": {
    "type": "git",
    "url": "https://github.com/Z-feiyao/show_git_change_count"
  },
  "keywords": [
    "git",
    "scm",
    "source control",
    "change count"
  ],
  "license": "MIT",
  "author": {
    "name": "Steve Zhang",
    "email": "steve.zhang@example.com"
  }
}
